@model KategoriInsertVM

<div class="card">
    <div class="card-header">
        <h3>Yeni Kategori Ekleme</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label"></label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>

</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

