@model IEnumerable<Urun>
@*  Eger  Html.DisplayNameFor kullanilacaksa

model kismindaki liste tipi mutlaka IEnumarable tipinden olmalidir
Diger ICollection yada List seklindeki tanimlamalari kabul etmez
 *@

<a class="btn btn-primary" asp-action="Create" asp-controller="Urun">Yeni Urun</a>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(p => p.Id)</td>
                <td>@Html.DisplayNameFor(p => p.UrunAdi)</td>
                <td>@Html.DisplayNameFor(p => p.UrunKodu)</td>
                <td>@Html.DisplayNameFor(p => p.Fiyat)</td>
                <td>@Html.DisplayNameFor(p => p.Adet)</td>
                <td>@Html.DisplayNameFor(p => p.Birim)</td>
                <td>Kategoriler</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Id</td>
                    <td>@urun.UrunAdi</td>
                    <td>@urun.UrunKodu</td>
                    <td>@urun.Fiyat</td>
                    <td>@urun.Adet</td>
                    <td>@urun.Birim.BirimAdi</td>
                    <td>
                        <a class="btn btn-success"
                           asp-action="KategoriYonet2"
                           asp-route-id="@urun.Id">Kategoriler</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger"> Kayit Yok </p>
}

