@model UrunInsertVM

<div class="card">
    <div class="card-header">
        <h3 class="text-success">Yeni Urun Tanimlama Sayfasi</h3>
        @*
        asp-validation-summary tag helper 'i 
        manuel verdigimiz hatalari basmaya yarar

        *@


       
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-3">
                <label asp-for="UrunAdi"></label>
                <input asp-for="UrunAdi" />
                <span asp-validation-for="UrunAdi" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="UrunKodu"></label>
                <input asp-for="UrunKodu" />
                <span asp-validation-for="UrunKodu" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="BirimId"></label>
                <select asp-for="BirimId">
                    @foreach (Birim birim in ViewBag.birimler)
                    {
                        <option value="@birim.Id">@birim.BirimAdi</option>
                    }
                </select>
               @*  <input asp-for="BirimId" />
                <span asp-validation-for="BirimId" class="text-danger"></span> *@
            </div>
            <div class="mt-3">
                <label asp-for="Adet"></label>
                <input asp-for="Adet" />
                <span asp-validation-for="Adet" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Fiyat"></label>
                <input asp-for="Fiyat" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button class="btn btn-success" type="submit">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 